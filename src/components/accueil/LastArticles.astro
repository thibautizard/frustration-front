---
const { posts } = Astro.props;
---

<h2 class="last-articles">Nos derniers articles</h2>
{
  posts.map((post: any) => (
    <article>
      <h5>{post.title.rendered} </h5>
      <p>{post.excerpt.rendered}</p>
    </article>
  ))
}

<style>
  h2.last-articles {
    font-family: Bebas Neue;
    font-size: 7rem;
    letter-spacing: -0.3rem;
  }
</style>
