---
import { Image } from "astro:assets";
import MagnifyingGlassIcon from "./icons/MagnifyingGlass.astro";
import BarsIcon from "./icons/Bars.astro";
import frustrationLogo from "../../public/img/logo-frustration.webp";
---

<header>
  <nav class="flex items-center bg-black text-yellow p-1.5 md:p-3 lg:p-4 xl:py-4 xl:px-5">
    <a
      href="/"
      class="mr-auto w-32 md:w-48 lg:w-64"
    >
      <Image
        src={frustrationLogo}
        width="200"
        alt="Logo de Frustration"
      />
    </a>
    <div class="flex gap-2 md:gap-3 lg:gap-4 xl:gap-5">
      <button type="button">
        <MagnifyingGlassIcon />
      </button>
      <button type="button">
        <BarsIcon />
      </button>
    </div>
  </nav>
</header>
